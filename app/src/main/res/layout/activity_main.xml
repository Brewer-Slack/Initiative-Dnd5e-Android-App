<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bennettfalkenberg.initiative.MainActivity"
    android:columnCount="3"
    android:padding="10dp"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/currChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/current_character"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight=".3"
        android:padding="5dp"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/characterList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight=".3"
        android:layout_columnSpan="2"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/strengthText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/strength_label"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/dexterityText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dexterity_label"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/constitutionText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/constitution_label"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/inventory"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:text="@string/inventory"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_columnWeight="1.5"
        android:layout_rowWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/className"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:text="@string/class_name"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_columnWeight="1.5"
        android:layout_rowWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/currCharacterSkills"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:text="@string/skills_label"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_columnWeight="1.5"
        android:layout_rowWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/intelligenceText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/intelligence_label"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/wisdomText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/wisdom_label"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/charismaText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/charisma_label"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:gravity="center"/>

</GridLayout>
